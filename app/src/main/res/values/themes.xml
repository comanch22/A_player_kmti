<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SimplePlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorControlNormal">@color/primaryColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorPrimaryDark">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnBackground">@color/primaryColor</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
        <item name="colorSwitchThumbNormal">#BBC8D3</item>
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="popupTheme">@style/PopupStarTrack</item>
        <item name="android:soundEffectsEnabled">false</item>

    </style>

    <style name="PopupStarTrack" parent="Theme.AppCompat">
        <item name="android:colorBackground">@color/colorPrimaryLight</item>
        <item name="android:textColor">#253E49</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="licensesTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/launchTextColor</item>
        <item name="android:homeAsUpIndicator">@drawable/license_activity_back_arrow</item>
        <item name="titleTextColor">@color/launchTextColor</item>
        <item name="android:colorForeground">@color/launchTextColor</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="Theme.Base" parent="Theme.AppCompat">
        <item name="android:windowDisablePreview">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Base.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Theme.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Theme.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogNeutralButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogNeutralButtonStyle</item>
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="AlertDialogNeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondaryBlue</item>
        <item name="backgroundTint">@color/colorPrimaryLight</item>
        <item name="background">@color/colorPrimaryLight</item>
        <item name="android:gravity">start</item>
        <item name="android:foregroundGravity">left</item>
        <item name="android:layout_gravity">start</item>
    </style>

</resources>