<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SimplePlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="fontFamily">@font/comfortaa_family</item>

        <!-- control color. -->
        <item name="colorPrimary">@color/controlMain</item>

        <!-- background color. -->
        <item name="colorPrimaryVariant">@color/backgroundMain</item>
        <item name="colorOnPrimary">@color/backgroundMain2</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- text color. -->
        <item name="colorSecondary">@color/colorTextMain</item>
        <!-- text color secondary. -->
        <item name="colorOnSecondary">@color/colorTextSecondaryMain</item>
        <!-- text hint. -->
        <item name="colorSurfaceVariant">@color/colorTextHintMain</item>

        <!-- switch. -->
        <item name="colorSwitchThumbNormal">@color/backgroundMain2</item>
        <item name="colorControlActivated">@color/colorControlInactiveMain</item>

        <!-- slider. -->
        <item name="colorOnTertiary">@color/colorControlInactiveMain</item>
        <item name="colorTertiary">@color/colorControlActiveMain</item>

        <!-- popupTheme. -->
        <item name="popupTheme">@style/PopupTheme</item>

        <!-- ripple. -->
        <item name="colorControlHighlight">@color/colorRippleMain</item>

        <!-- menu. -->
        <item name="actionOverflowButtonStyle">@style/myActionOverflowButtonStyle</item>

        <!-- alertDialog theme. -->
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>

    </style>

    <style name="Theme.SimplePlayerLight" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="fontFamily">@font/comfortaa_family</item>

        <!-- control color. -->
        <item name="colorPrimary">@color/controlLight</item>

        <!-- background color. -->
        <item name="colorPrimaryVariant">@color/backgroundLight</item>
        <item name="colorOnPrimary">@color/backgroundLight2</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- text color. -->
        <item name="colorSecondary">@color/colorTextLight</item>
        <!-- text color secondary. -->
        <item name="colorOnSecondary">@color/colorTextSecondaryLight</item>
        <!-- text hint. -->
        <item name="colorSurfaceVariant">@color/colorTextHintLight</item>

        <!-- switch. -->
        <item name="colorSwitchThumbNormal">@color/backgroundLight2</item>
        <item name="colorControlActivated">@color/controlLight</item>

        <!-- slider. -->
        <item name="colorOnTertiary">@color/colorControlInactiveLight</item>
        <item name="colorTertiary">@color/colorControlActiveLight</item>

        <!-- popupTheme. -->
        <item name="popupTheme">@style/PopupTheme</item>

        <!-- ripple. -->
        <item name="colorControlHighlight">@color/colorRippleLight</item>

        <!-- menu. -->
        <item name="actionOverflowButtonStyle">@style/myActionOverflowButtonStyle</item>

        <!-- alertDialog theme. -->
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:colorBackground">@color/transparent_background100</item>
        <item name="textColorAlertDialogListItem">?attr/colorSecondary</item>
        <item name="android:background">@drawable/rectangle_for_dialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat">
        <item name="android:colorBackground">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="myActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="licensesTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:homeAsUpIndicator">@drawable/license_activity_back_arrow</item>
        <item name="titleTextColor">@color/textColorLight</item>
        <item name="android:colorForeground">@color/textColorLight</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

</resources>