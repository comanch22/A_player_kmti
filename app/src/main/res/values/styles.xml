<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="list_toolbar">
        <item name="android:elevation">4dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="list_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="list_recycle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="list_fab_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="borderWidth">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:layout_gravity">start|bottom</item>
    </style>

    <style name="list_guideline_hor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="list_guideline_ver">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="list_size12">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_size14">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@animator/click_scale_anim_button</item>
    </style>

</resources>