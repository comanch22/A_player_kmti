<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SimplePlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimaryVariantBlue</item>
        <item name="colorPrimaryVariant">#CCE7F4</item>
        <item name="colorControlNormal">@color/colorPrimaryVariantBlue</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>



        <item name="colorSwitchThumbNormal">@color/teal_200</item>
        <item name="colorControlActivated">#280763</item>
        <item name="popupTheme">@style/PopupStarTrack</item>
        <item name="android:soundEffectsEnabled">false</item>

    </style>

    <style name="PopupStarTrack" parent="Theme.AppCompat">
        <item name="android:colorBackground">@color/colorPrimaryVariantBlue</item>
        <item name="android:textColor">@color/colorSecondaryBlue</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="licensesTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/launchTextColor</item>
        <item name="android:homeAsUpIndicator">@drawable/license_activity_back_arrow</item>
        <item name="titleTextColor">@color/launchTextColor</item>
        <item name="android:colorForeground">@color/launchTextColor</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogNeutralButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogNeutralButtonStyle</item>
        <item name="android:backgroundTint">@color/colorPrimaryVariantBlue</item>
        <item name="android:background">@color/colorPrimaryVariantBlue</item>
    </style>

    <style name="AlertDialogNeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondaryBlue</item>
        <item name="backgroundTint">@color/colorPrimaryVariantBlue</item>
        <item name="background">@color/colorPrimaryVariantBlue</item>
        <item name="android:gravity">start</item>
        <item name="android:foregroundGravity">left</item>
        <item name="android:layout_gravity">start</item>
    </style>

</resources>